<!--pages/newMileTone/new.wxml-->
<view class='main-body'>
    <arrow-selector
        hideStatus="{{hideStatus}}"
        bind:leftClick="leftClick"
        bind:rightClick="rightClick" />
    <view class='part-div'>
        <view class='title g-h2'>title</view>
        <view class='content'>{{currentMission.title}}</view>
        <view class='title g-h2'>desc</view>
        <view class='content'>{{currentMission.desc}}</view>
        <view class='title g-h2'>goal</view>
        <view class='content'>{{currentMission.goal}}</view>
    </view>
    <button bindtap="newMtClick">submit</button>
</view>