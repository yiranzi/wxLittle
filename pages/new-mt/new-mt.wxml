<!--pages/newMileTone/new.wxml-->
<view class='main-body'>
    <view class='part-div'>
        <modal-box
        id='modalBox'
        defaultContent="你确定要建立里程碑！！！{{newMtName}}"
        sureContent="就它了"
        cancelContent="再等等"
        bind:cancelEvent="cancelEvent"
        bind:sureEvent="sureEvent" />
        <view class='title g-h2'>新建任务</view>
        <view>
          <input value="{{newMtName}}" placeholder='新建你的里程碑' bindinput="inputCbf" focus />
        </view>
        <button bindtap="newMtClick">提交</button>
    </view>
</view>